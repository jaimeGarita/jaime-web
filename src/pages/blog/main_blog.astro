---
import PostList from "../../components/PostList.astro";
import Layout from "../../layouts/Layout.astro";
---

<link
  href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap"
  rel="stylesheet"
/>
<style>
  .blog-list {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
  }
  .blog-list a {
    display: block;
    color: #fff;
    text-decoration: none;
    padding: 10px 0;
    border-bottom: 1px solid #333;
  }
  .blog-list a:hover {
    background-color: #333;
  }
  #title {
    color: #4caf50;
    text-decoration: none;
    width: 100%;
    height: 100%;
    text-align: center;
  }
</style>
<Layout title="Blogs">
  <h1 id="title">Blog</h1>
  <PostList />
</Layout>
