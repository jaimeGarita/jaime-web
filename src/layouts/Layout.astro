---
import ViewTransitions from 'astro/components/ViewTransitions.astro';
import Navbar from '../components/Navbar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="¡Bienvenido a mi blog sobre microservicios, Dockerfile, DDD, event sourcing y más! Explora artículos y tutoriales sobre desarrollo de software y arquitectura backend." />
		<meta name="viewport" content="width=device-width" />
		<meta name="author" content="Jaime Garitagoitia" />
		<ViewTransitions></ViewTransitions>
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar></Navbar>
		<div id="content">
		<slot />
		</div>
	</body>
</html>
<style is:global>
	:root {
		--color-main: #1a1a1a;
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	#content{
		max-width: 60rem;
        margin: auto;
	}
	html {
		color: #fff;
        font-family: "Inter", sans-serif;
        margin: 0;
        padding: 0;
		font-family: system-ui, sans-serif;
		background-color:var(--color-main);
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
